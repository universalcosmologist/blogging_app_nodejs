<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Post Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <h2>Post your blog here</h2>
    <form action="/blog/post" method="post" enctype="multipart/form-data">
       <div class="mb-3">
          <label for="coverImage" class="form-label">Cover Image</label>
          <input type="file" class="form-control" id="coverImage" name="coverimage"/>
       </div>
        <div class="mb-3">
          <label for="disabledTextInput" class="form-label">blog title</label>
          <input type="text" id="disabledTextInput" class="form-control" name="blogtitle">
        </div>
        <div class="mb-3">
          <label for="text_area" class="form-label">blog content</label>
          <textarea id="text_area" name="blogcontent" rows="10" cols="30" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
    <%- include('./partials/script') %>
</body>
</html>