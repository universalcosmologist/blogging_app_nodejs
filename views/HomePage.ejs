<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <h1 style='margin-top: 50px;'>Welcome to the Blog Parasite Homepage !</h1>
    <div class="container mt-3">
    <div class="row row-cols-3">
        <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card col" style="width: 18rem;">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.blogtitle %></h5>
                      <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                    </div>
                  </div>
            </div>
         <% }) %>
    </div>
    </div>
    <%- include('./partials/script') %>
</body>
</html>