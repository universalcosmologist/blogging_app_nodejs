<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Post Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <% if (locals.blog) { %>
        <div class="mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px"><%= blog.createdBy.fullname %>
        </div>
        <div class="mt-4">
            <%= blog.blogtitle %>
        </div>
        <div class="mt-4">
            <img src="<%= blog.coverImageURL %>" width="300px">
        </div> 
        <div class="mt-4">
           <pre> <%= blog.blogcontent %></pre>
        </div>
    <% } %>
    <div class="mt-4">
       <% if (locals.user) { %>
        <h2>Comment</h2>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <textarea name="content" class="form-control" rows="2" cols="30"></textarea>
            <button type="cubmit" class="btn btn-primary">Add Comment</button>
        </form>
       <% } %>
    </div>
    <div class="mt-3">
        <h2>Comments(<%= comments.length %>)</h2>
        <% comments.forEach(comment=> { %>
            <div>
                <img src="<%= comment.createdBy.profileImageURL %>" width="50px"><%= comment.createdBy.fullname %>
                :<pre><%= comment.content %></pre>
            </div>
        <% }) %>
    </div>
    <%- include('./partials/script') %>
</body>
</html>